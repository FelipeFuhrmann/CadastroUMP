@model CadastroUMP.Dominio.Sinodal

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sinodal</legend>

        @Html.HiddenFor(model => model.SinodalId)
        @Html.HiddenFor(model => model.Regional.RegionalId)

        <div class="editor-label">
            @Html.LabelFor(model => model.NomeSinodal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeSinodal)
            @Html.ValidationMessageFor(model => model.NomeSinodal)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
