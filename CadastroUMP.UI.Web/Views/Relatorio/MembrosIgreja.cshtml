@model IEnumerable<CadastroUMP.Dominio.Membro>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Membros da Igreja </title>
    <h3>Relatório de todos os membros da igreja:</h3>
</head>
<body>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeMembro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdadeMembro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneMembro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeMembro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdadeMembro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneMembro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }

    </table>
</body>
</html>
