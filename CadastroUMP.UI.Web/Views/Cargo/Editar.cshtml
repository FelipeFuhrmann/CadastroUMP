@model CadastroUMP.Dominio.Cargo

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cargo</legend>

        @Html.HiddenFor(model => model.CargoId)

        <div class="editor-label">
            @Html.LabelFor(model => model.NomeCargo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeCargo)
            @Html.ValidationMessageFor(model => model.NomeCargo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoCargo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TipoCargo)
            @Html.ValidationMessageFor(model => model.TipoCargo)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
