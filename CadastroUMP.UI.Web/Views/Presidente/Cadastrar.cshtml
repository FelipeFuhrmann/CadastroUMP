@model CadastroUMP.Dominio.Presidente

@{
    ViewBag.Title = "Cadastrar";
}

<head>
    <title></title>

    <meta charset="utf-8">

    <link rel="stylesheet" href="/Content/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" media="screen" />

</head>

<h2>Cadastrar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
    <div class="editor-label">
        @ViewBag.NomeLista
    </div>
    <div class="editor-field">
        <select id="RelacionadoId" name="RelacionadoId">
            @foreach (var item in (Dictionary<string, string>)ViewBag.Lista)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
    <div class="form-group">
            <label >@Html.LabelFor(model => model.NomePresidente)</label>
            <input type="text" class="form-control"  id="NomePresidente" name="NomePresidente" style="width: 10%" placeholder="Digite o Nome">
        </div>
  
    <form>
        <div class="form-group">
            <label>@Html.LabelFor(model => model.Sexo)</label>
            <input type="text" class="form-control" id="Sexo" name="Sexo" style="width: 10%" placeholder="Digite o sexo">
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(model => model.Email)</label>
            <input type="email" class="form-control" id="Email"  name="Email" style="width: 40%" placeholder="Digite o e-mail">
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(model => model.Usuario)</label>
            <input type="text" class="form-control" id="Usuario" name="Usuario" style="width: 30%" placeholder="Digite o usuário">
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(model => model.Senha)</label>
            <input type="password" class="form-control" id="Senha" name="Senha" style="width: 20%" placeholder="Digite a senha">
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(model => model.VigenciaInicio)</label>
            <input type="date" class="form-control" id="VigenciaInicio" name="VigenciaInicio" style="width: 15%" placeholder="Digite a data inicial">
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(model => model.VigenciaFinal)</label>
            <input type="date" class="form-control" id="VigenciaFinal" name="VigenciaFinal" style="width: 15%" placeholder="Digite a data final">
        </div>
        <p>
            <button type="submit" class="btn btn-primary ">Cadastrar</button>
        </p>
    </form>
    
}

<div>
    @Html.ActionLink("Voltar", "Nacional")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}















