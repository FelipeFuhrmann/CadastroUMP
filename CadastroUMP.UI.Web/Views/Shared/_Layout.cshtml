@using CadastroUMP.UI.Web.Helpers
<!DOCTYPE html>
<head>
    <title></title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.js"></script>

    <!--Core js-->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Easy Pie Chart-->
    <script src="~/Scripts/jquery.easypiechart.js"></script>
    <!--Sparkline Chart-->
    <script src="~/Scripts/jquery.sparkline.js"></script>
    <!--jQuery Flot Chart-->
    <script src="~/Scripts/jquery.flot.js"></script>
    <script src="~/Scripts/jquery.flot.tooltip.min.js"></script>
    <script src="~/Scripts/jquery.flot.resize.js"></script>
    <script src="~/Scripts/jquery.flot.pie.resize.js"></script>
    <!--common script init for all pages-->


    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="shortcut icon" href="~/Content/img/favicon.png">

    <!--Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-reset.css" rel="stylesheet">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet" />



</head>

<body class="">
    @if (Seguranca.Autenticado())
    {
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <div class="">
                        <a class="logo">
                            <img src="~/Content/img/Logo 02.png" alt="">
                        </a>
                    </div>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->


                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="margin-top: 18px;">
                    <ul class="nav nav-pills">
                        <li class="active">@Html.ActionLink("Painel", "Painel", "Home")</li>
                        @if (Seguranca.Autenticado("nacional"))
                        {
                            <li class="active">@Html.ActionLink("Cadastro de Presidente", "Nacional", "Presidente")</li>
                        }
                        @if (Seguranca.Autenticado("regional"))
                        {
                            <li class="active">@Html.ActionLink("Cadastro de Presidente", "Nacional", "Presidente")</li>
                            <li class="active">@Html.ActionLink("Cadastro de Sinodal", "Index", "Sinodal")</li>
                        }
                        @if (Seguranca.Autenticado("sinodal"))
                        {
                            <li class="active">@Html.ActionLink("Cadastro de Presidente", "Nacional", "Presidente")</li>
                            <li class="active">@Html.ActionLink("Cadastro de Federaçao", "Index", "Federacao")</li>
                        }
                        @if (Seguranca.Autenticado("federação"))
                        {
                            <li class="active">@Html.ActionLink("Cadastro de Presidente", "Nacional", "Presidente")</li>
                            <li class="active">@Html.ActionLink("Cadastro de Igreja", "Index", "Igreja")</li>
                        }
                        @if (Seguranca.Autenticado("local"))
                        {
                            <li class="active">@Html.ActionLink("Cadastro de Membros", "Index", "Membro")</li> 
                        }
                        <li class="dropdown active">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Relatórios<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li ><a href="#">@Html.ActionLink("Presidentes", "PDFPadrao", "Relatorio")</a></li>
                                <li><a href="#">@Html.ActionLink("Membros por Região", "MembrosPorRegiao", "Relatorio")</a></li>
                                <li><a href="#">Something else here</a></li>
                            </ul>
                        </li>


                        <li class="active">@Html.ActionLink("Editar Perfil", "EditarPerfil", "Presidente")</li>
                        <li class="active"><a>Ajuda</a></li>
                        <li class="active">@Html.ActionLink("Sair", "Sair", "Home")</li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    }

    <div class="container">
        <div class="row">
            <div class="col-md-12">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)


</body>






